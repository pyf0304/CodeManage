function GetRequest() {
    var url = location.search; //获取url中"?"符后的字串
    var theRequest = new Object();
    if (url.indexOf("?") != -1) {
        var str = url.substr(1);
        strs = str.split("&");
        for (var i = 0; i < strs.length; i++) {
            theRequest[strs[i].split("=")[0]] = unescape(strs[i].split("=")[1]);
        }
    }
    return theRequest;
}
function GetPushTypeId() {
    var Request = new Object();
    Request = GetRequest();
    //课文推送类型
    var strPushTypeId = Request['PushTypeId'];
    $('#hidPushTypeId').val(strPushTypeId);

    if (strPushTypeId != null) {
        require(["../js/GraduateEduTools/sys_RequestPushCRUDEx.js"], function (sys_requestpush) {
            var objPage = new sys_requestpush.sys_RequestPushCRUDEx();
            objPage.Page_Load();
        });

    }
}


