
@page
@{
    Layout = "";
}
@section Styles{
    <link rel="stylesheet" href="../lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="../css/site.css" />
}
@section Scripts{
    <script src="../lib/jquery/dist/jquery.js"></script>
    <script src="../lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="../js/site.js" asp-append-version="true"></script>
    <script src="../lib/bootstrap/dist/js/popper.js"></script>
    <script src="../lib/require/require.js" data-main="../js/src/config"></script>
}
<script>
//所有用户自定义的JS函数建议都放在这里


</script>
<script>


 /*
  按钮单击,用于调用Js函数中btnEdit_Click
 (AutoGCLib.WA_ViewScript_Edit_TS4Html:Gen_WApi_JS_btnEdit_Click)
 */
function btnEdit_Click(strCommandName, strKeyId) {
   require(["../js/GraduateEduPaper/Section_EditEx.js"], function(section) {
section.Section_EditEx.btnEdit_Click(strCommandName, strKeyId);
});
}

 /*
  显示对话框
 (AutoGCLib.WA_ViewScript_Edit_TS4Html:Gen_WApi_JS_ShowDialog)
 */
function ShowDialog_Section(pstrOp) {
   strOp = pstrOp;
   require(['jquery', 'bootstrap'], function($) {
       if (strOp === "Add") {
           $('#lblDialogTitle_Section').html('添加章节');
//Section_EditEx.GetMaxStrId('#txtSectionId');
        }
else if (strOp === "Update")
{
            $('#lblDialogTitle_Section').html('修改记录');
}
else if (strOp === "Detail")
{
            $('#btnSubmit_Section').hide();
            $('#lblDialogTitle_Section').html('详细信息');
}
        $('#divEditDialog_Section').modal('show');
  });
}

 /*
  隐藏对话框
 (AutoGCLib.WA_ViewScript_Edit_TS4Html:Gen_WApi_JS_HideDialog)
 */
function HideDialog_Section() {
  require(['jquery', 'bootstrap'], function($) {
      $('#divEditDialog_Section').modal('hide');
  });
}
</script>
<div id="tabLayout" class="tab_layout">
    @*-- 编辑层 --*@

    <div class="modal fade" id="divEditDialog_Section" tabindex="-1" role="dialog" aria-labelledby="lblDialogTitle_Section" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content" style="width: 835px;">
                <div class="modal-header">
                    <h4 class="modal-title" id="lblDialogTitle_Section">模态框（Modal）标题</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <table id="tabEdit" style="width:800px" class="table table-bordered table-hover table td table-sm">
                        <tr id="trSectionName">
                            <td class="text-right">
                                <Label id="lblSectionName" name="lblSectionName" class="col-form-label text-right" style="width:90px;">
                                    名称
                                </Label>
                            </td>
                            <td class="text-left">
                                <input id="txtSectionName" name="txtSectionName" class="form-control" style="width:200px;" />
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="modal-footer">
                    <Label id="lblMsgText" name="lblMsgText" class="col-form-label text-right" style="color:red;">
                        (提示:只有添加节名并选中后,才能进行段落相关操作)
                    </Label>
                    <button id="btnCancel_Section" type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    <button id="btnSubmit_Section" type="button" class="btn btn-primary" onclick="btnEdit_Click('Submit')">添加</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal -->
    </div>
</div>

@* 论文Id *@
<input id="hidPaperId" type="hidden" />
@* 存储点击的父节点id *@
<input id="hidParentId" type="hidden" />
@* 节id *@
<input id="hidSectionId" type="hidden" />
<input id="hidKeyId" type="hidden" />
@* 排序号 *@
<input id="hidOrderNum" type="hidden" />