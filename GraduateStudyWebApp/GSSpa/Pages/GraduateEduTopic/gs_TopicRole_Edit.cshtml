<script>


 /*
  按钮单击,用于调用Js函数中btnEdit_Click
 (AutoGCLib.WA_ViewScript_Edit_TS4Html:Gen_WApi_JS_btnEdit_Click)
 */
function btnEdit_Click(strCommandName, strKeyId) {
   require(["../js/GraduateEduTopic/gs_TopicRole_EditEx.js"], function(gs_topicrole) {
gs_topicrole.gs_TopicRole_EditEx.btnEdit_Click(strCommandName, strKeyId);
});
}

 /*
  显示对话框
 (AutoGCLib.WA_ViewScript_Edit_TS4Html:Gen_WApi_JS_ShowDialog)
 */
function ShowDialog_gs_TopicRole(pstrOp) {
   strOp = pstrOp;
   require(['jquery', 'bootstrap'], function($) {
       if (strOp === "Add") {
           $('#lblDialogTitle_gs_TopicRole').html('添加记录');
//gs_TopicRole_EditEx.GetMaxStrId('#txtTopicRoleId');
        }
else if (strOp === "Update")
{
            $('#lblDialogTitle_gs_TopicRole').html('修改记录');
}
else if (strOp === "Detail")
{
            $('#btnSubmit_gs_TopicRole').hide();
            $('#lblDialogTitle_gs_TopicRole').html('详细信息');
}
        $('#divEditDialog_gs_TopicRole').modal('show');
  });
}

 /*
  隐藏对话框
 (AutoGCLib.WA_ViewScript_Edit_TS4Html:Gen_WApi_JS_HideDialog)
 */
function HideDialog_gs_TopicRole() {
  require(['jquery', 'bootstrap'], function($) {
      $('#divEditDialog_gs_TopicRole').modal('hide');
  });
}
</script>
