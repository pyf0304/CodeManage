<script>


 /*
  显示对话框
 (AutoGCLib.WA_ViewScript_Edit_TS4Html:Gen_WApi_JS_ShowDialog)
 */
function ShowDialog_gs_TeacherTask(pstrOp) {
   strOp = pstrOp;
   require(['jquery', 'bootstrap'], function($) {
       if (strOp === "Add") {
           $('#lblDialogTitle_gs_TeacherTask').html('添加记录');
//gs_TeacherTask_EditEx.GetMaxStrId('#txtmId');
        }
else if (strOp === "Update")
{
            $('#lblDialogTitle_gs_TeacherTask').html('修改记录');
}
else if (strOp === "Detail")
{
            $('#btnSubmit_gs_TeacherTask').hide();
            $('#lblDialogTitle_gs_TeacherTask').html('详细信息');
}
        $('#divEditDialog_gs_TeacherTask').modal('show');
  });
}

 /*
  隐藏对话框
 (AutoGCLib.WA_ViewScript_Edit_TS4Html:Gen_WApi_JS_HideDialog)
 */
function HideDialog_gs_TeacherTask() {
  require(['jquery', 'bootstrap'], function($) {
      $('#divEditDialog_gs_TeacherTask').modal('hide');
  });
}
</script>
