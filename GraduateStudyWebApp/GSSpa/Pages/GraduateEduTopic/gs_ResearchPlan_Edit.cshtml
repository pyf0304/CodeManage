<div id="tabLayout" class="tab_layout">
    @*-- 编辑层 --*@

    <div class="modal fade" id="divEditRegion" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content" style="width: 635px;">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel">模态框（Modal）标题</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <table id="tabEdit" style="width:600px" class="table table-bordered table-hover table td table-sm">
                        <tr style="display:none;">
                            <td class="text-right">
                                <Label id="lblPlanId" name="lblPlanId" class="col-form-label text-right" style="width:90px;">
                                    计划Id
                                </Label>
                            </td>
                            <td class="text-left">
                                <input id="txtPlanId" name="txtPlanId" class="form-control" style="width:150px;" />
                            </td>
                        </tr>
                        <tr>
                            <td class="text-right">
