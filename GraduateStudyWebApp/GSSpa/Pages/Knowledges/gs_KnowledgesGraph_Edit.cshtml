
@page
@{
    Layout = "";
}
@section Styles{
    <link rel="stylesheet" href="../lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="../css/site.css" />
}
@section Scripts{
    <script src="../lib/jquery/dist/jquery.js"></script>
    <script src="../lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="../js/site.js" asp-append-version="true"></script>
    <script src="../lib/bootstrap/dist/js/popper.js"></script>
    <script src="../lib/require/require.js" data-main="../js/src/config"></script>
}
<script>
//所有用户自定义的JS函数建议都放在这里


</script>
<script>


 /*
  按钮单击,用于调用Js函数中btnEdit_Click
 (AutoGCLib.WA_ViewScript_Edit_TS4Html:Gen_WApi_JS_btnEdit_Click)
 */
function btnEdit_Click(strCommandName, strKeyId) {
   require(["../js/Knowledges/gs_KnowledgesGraph_EditEx.js"], function(gs_knowledgesgraph) {
gs_knowledgesgraph.gs_KnowledgesGraph_EditEx.btnEdit_Click(strCommandName, strKeyId);
});
}

 /*
  显示对话框
 (AutoGCLib.WA_ViewScript_Edit_TS4Html:Gen_WApi_JS_ShowDialog)
 */
function ShowDialog_gs_KnowledgesGraph(pstrOp) {
   strOp = pstrOp;
   require(['jquery', 'bootstrap'], function($) {
       if (strOp === "Add") {
           $('#lblDialogTitle_gs_KnowledgesGraph').html('添加记录');
//gs_KnowledgesGraph_EditEx.GetMaxStrId('#txtKnowledgeGraphId');
        }
else if (strOp === "Update")
{
            $('#lblDialogTitle_gs_KnowledgesGraph').html('修改记录');
}
else if (strOp === "Detail")
{
            $('#btnSubmit_gs_KnowledgesGraph').hide();
            $('#lblDialogTitle_gs_KnowledgesGraph').html('详细信息');
}
        $('#divEditDialog_gs_KnowledgesGraph').modal('show');
  });
}

 /*
  隐藏对话框
 (AutoGCLib.WA_ViewScript_Edit_TS4Html:Gen_WApi_JS_HideDialog)
 */
function HideDialog_gs_KnowledgesGraph() {
  require(['jquery', 'bootstrap'], function($) {
      $('#divEditDialog_gs_KnowledgesGraph').modal('hide');
  });
}
</script>
<div id="tabLayout" class="tab_layout">
    @*-- 编辑层 --*@

    <div class="modal fade" id="divEditDialog_gs_KnowledgesGraph" tabindex="-1" role="dialog" aria-labelledby="lblDialogTitle_gs_KnowledgesGraph" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content" style="width: 635px;">
                <div class="modal-header">
                    <h4 class="modal-title" id="lblDialogTitle_gs_KnowledgesGraph">模态框（Modal）标题</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <table id="tabEdit" style="width:600px" class="table table-bordered table-hover table td table-sm">
                        <tr id="trCourseId">
                            <td class="text-right">
                                <Label id="lblKnowledgeGraphName" name="lblKnowledgeGraphName" class="col-form-label text-right" style="width:90px;">
                                    知识点图名
                                </Label>
                            </td>
                            <td class="text-left">
                                <input id="txtKnowledgeGraphName" name="txtKnowledgeGraphName" class="form-control" style="width:150px;" />
                            </td>
                            <td class="text-right">
                                <Label id="lblCourseId" name="lblCourseId" class="col-form-label text-right" style="width:90px;">
                                    课程Id
                                </Label>
                            </td>
                            <td class="text-left">
                                <select id="ddlCourseId" name="ddlCourseId" class="form-control" style="width:150px;"></select>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="modal-footer">
                    <button id="btnCancel_gs_KnowledgesGraph" type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    <button id="btnSubmit_gs_KnowledgesGraph" type="button" class="btn btn-primary" onclick="btnEdit_Click('Submit')">添加</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal -->
    </div>
</div>